<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <environment include="Development">
        <link rel="stylesheet" asp-href-include="css/*" asp-href-exclude="css/all.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" asp-href-include="css/all.min.css" />
    </environment>
</head>
<body class="container">
    <div class="row">
        <div class="col-md-2">
            <img asp-append-version="true" alt="Logo" src="~/img/logo.png" style="align-content:center;" />
        </div>
        <div class="col-md-10 titlecol">
            <span class="title">@ViewBag.Title</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>
</body>
</html>